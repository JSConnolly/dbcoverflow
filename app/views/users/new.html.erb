<h1>Sign up</h1>
<%= form_for @user do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :password %>
	<%= f.password_field :password %>
	<%= f.submit "Create user!" %>
<% end %>
<% if session[:errors] %>
	<div class="errors">
		 <% session[:errors].each do |e| %>
		 	<p class="error"><%= e %></p>
		 <% end %>
	 </div>
<% end %>